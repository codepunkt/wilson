{
  "name": "@wilson/create-wilson-site",
  "version": "1.0.0-beta.2",
  "license": "MIT",
  "author": "Christoph Werner <christoph@codepunkt.de>",
  "description": "Blazing-fast, opinionated static site generator for Preact",
  "bin": {
    "wilson": "bin/create-wilson-site.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "template/**"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "preact",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "scripts": {
    "build": "yarn run clean && tsc",
    "dev": "yarn run clean && tsc -w",
    "clean": "node -e \"fs.rmSync('dist', { force: true, recursive: true })\"",
    "prepack": "yarn run build"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cross-spawn": "^7.0.3",
    "fs-extra": "^10.0.0",
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.12",
    "@types/minimist": "^1.2.2",
    "@types/node": "^16.7.1"
  }
}
