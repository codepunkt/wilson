{
  "name": "wilson",
  "version": "1.0.0-beta.8",
  "license": "MIT",
  "author": "Christoph Werner <christoph@codepunkt.de>",
  "description": "Blazing-fast, opinionated static site generator for Preact",
  "bin": {
    "wilson": "bin/wilson.js"
  },
  "main": "dist/node/index.js",
  "types": "dist/node/index.d.ts",
  "files": [
    "bin/**",
    "dist/**",
    "virtual.d.ts"
  ],
  "engines": {
    "node": "^14.16.0",
    "yarn": "^1.22.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codepunkt/wilson",
    "directory": "packages/wilson"
  },
  "bugs": {
    "url": "https://github.com/codepunkt/wilson/issues"
  },
  "scripts": {
    "build": "rm -rf ./dist && run-p \"build-*\"",
    "build-node": "tsc -p src/node",
    "build-client": "tsc -p src/client",
    "dev": "rm -rf ./dist && run-p \"dev-*\"",
    "dev-node": "tsc -w -p src/node",
    "dev-client": "tsc -w -p src/client",
    "prepack": "yarn run build"
  },
  "dependencies": {
    "@codepunkt/wasm-layout-text": "^3.0.0",
    "@prefresh/vite": "^2.2.0",
    "acorn": "^8.1.1",
    "astring": "^1.7.4",
    "boxen": "^5.0.0",
    "brotli-size": "^4.0.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "estree-walker": "2.0.2",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "gray-matter": "^4.0.2",
    "hast": "^1.0.0",
    "hoofd": "^1.2.2",
    "html-minifier-terser": "^5.1.1",
    "jimp": "^0.16.1",
    "minimatch": "^3.0.4",
    "minimist": "^1.2.5",
    "ora": "^5.4.0",
    "preact": "^10.5.13",
    "readdirp": "^3.6.0",
    "rehype-autolink-headings": "^5.0.1",
    "rehype-parse": "^7.0.1",
    "rehype-raw": "^5.1.0",
    "rehype-slug": "^4.0.1",
    "rehype-stringify": "^8.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.1.0",
    "remark-stringify": "^9.0.1",
    "sass": "^1.32.8",
    "sucrase": "^3.18.1",
    "unified": "^9.2.1",
    "unist-util-is": "^4.1.0",
    "unist-util-visit": "^2.0.3",
    "vite": "^2.2.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/estree": "^0.0.47",
    "@types/fs-extra": "^9.0.9",
    "@types/html-minifier-terser": "^5.1.1",
    "@types/minimatch": "^3.0.4",
    "@types/minimist": "^1.2.1",
    "@types/node": "^14.14.37",
    "@types/serve-handler": "^6.1.0",
    "tslib": "^2.2.0"
  }
}
