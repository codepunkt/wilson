{
  "name": "@wilson/root",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "author": "Christoph Werner <christoph@codepunkt.de>",
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "scripts": {
    "docs:build": "yarn workspace @wilson/docs build",
    "docs:start": "yarn workspace @wilson/docs start",
    "docs:serve": "yarn workspace @wilson/docs serve",
    "wilson:build": "yarn workspace wilson build",
    "wilson:start": "yarn workspace wilson start",
    "start": "run-p wilson:start docs:start",
    "build": "run-s wilson:build docs:build docs:serve",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">= 14.16.0",
    "yarn": ">= 1.22.10",
    "npm": ">= 7.11.1"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "arrowParens": "always",
    "printWidth": 80,
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "printWidth": 60
        }
      }
    ]
  },
  "lint-staged": {
    "{docs,packages}/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.1.4",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  }
}
