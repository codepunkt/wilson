{
  "name": "@wilson/root",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "author": "Christoph Werner <christoph@codepunkt.de>",
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "scripts": {
    "docs:build": "yarn workspace @wilson/docs build",
    "docs:dev": "yarn workspace @wilson/docs dev",
    "docs:serve": "yarn workspace @wilson/docs serve",
    "wilson:build": "yarn workspace wilson build",
    "wilson:dev": "yarn workspace wilson build",
    "dev": "run-s wilson:dev docs:dev",
    "build": "run-s wilson:build docs:build docs:serve"
  },
  "engines": {
    "node": "^14.16.0",
    "yarn": "^1.22.10",
    "npm": "^7.11.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  }
}
